{
  "name": "ai-shop",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build -w apps/api",
    "build:web": "npm run build -w @ai-shop/shared && npm run build -w apps/web"
  },
  "engines": {
    "node": ">=18"
  }
}
