{
  "name": "ai-shop",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:api": "node apps/api/build.mjs",
    "build:shared": "cd packages/shared && bun run build",
    "build:web": "bun run build:shared && cd apps/web && bun run build",
    "build:admin": "bun run build:shared && cd apps/admin && npm run build",
    "db:schema": "wrangler d1 execute ai-shop-db --remote --file=./schema/schema.sql"
  },
  "engines": {
    "node": ">=18"
  }
}
